<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_shein">

    <TextView
        android:id="@+id/txt_top_hashtag"
        style="@style/txt_h3_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mr_10"
        android:text="@string/shein_txt13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_memorial_sale"
        style="@style/txt_great_vibes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/shein_txt14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_discount_label"
        app:layout_constraintTop_toBottomOf="@+id/txt_top_hashtag" />

    <TextView
        android:id="@+id/txt_discount_label"
        style="@style/txt_img_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/shein_txt15"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_memorial_sale" />
<!--girardota, elcesis -->
    <TextView
        android:id="@+id/txt_warning_label"
        style="@style/txt_h4_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Select items only"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/body_guideline_3" />

    <LinearLayout
        android:id="@+id/img_body_card_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@+id/body_guideline_6"
        app:layout_constraintEnd_toStartOf="@+id/body_guideline_4"
        app:layout_constraintStart_toStartOf="@+id/body_guideline_3"
        app:layout_constraintTop_toBottomOf="@+id/txt_discount_label">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:scaleType="centerCrop"
            android:src="@drawable/img_dress" />

        <TextView
            style="@style/txt_h3_bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="DRESSES" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/img_body_card_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/mr_10"
        android:layout_marginEnd="@dimen/mr_10"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@+id/body_guideline_6"
        app:layout_constraintEnd_toEndOf="@id/body_guideline_5"
        app:layout_constraintStart_toEndOf="@id/body_guideline_4"
        app:layout_constraintTop_toBottomOf="@+id/txt_discount_label">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:scaleType="centerCrop"
            android:src="@drawable/img_swimsuit" />

        <TextView
            style="@style/txt_h3_bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="SWIMWEAR" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/img_body_card_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@+id/body_guideline_6"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="@id/body_guideline_5"
        app:layout_constraintTop_toBottomOf="@+id/txt_discount_label">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:scaleType="centerCrop"
            android:src="@drawable/img_top" />

        <TextView
            style="@style/txt_h3_bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="TOPS" />
    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/body_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/body_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/body_guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/body_guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/body_guideline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/body_guideline_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/body_guideline_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>